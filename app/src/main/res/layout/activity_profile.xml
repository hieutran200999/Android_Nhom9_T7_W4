<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
<variable
    name="account"
    type="com.example.baitaptuan1.Account" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Profile">

            <RelativeLayout
                android:id="@+id/rellay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_bg">

                <ImageButton
                    android:id="@+id/backProfile"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="344dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/back" />

                <RelativeLayout
                    android:id="@+id/imgUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="120dp">

                    <me.virtualiz.blurshadowimageview.BlurShadowImageView
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        app:v_shadowOffset="10dp"
                        app:v_imageRound="40dp"
                        app:v_imageSrc="@drawable/iconprofile" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/floatingActionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="65dp"
                        android:layout_marginTop="45dp"
                        android:clickable="true"
                        android:gravity="center"
                        app:backgroundTint="@android:color/transparent"
                        app:srcCompat="@drawable/ic_iconcamera" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgUser"
                    android:layout_centerHorizontal="true"
                    android:text="@{account.fullName}"
                    android:textSize="20dp"
                    android:fontFamily="@font/sofia_pro_semibold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tveditprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtName"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:text="Edit Profile"
                    android:textSize="14dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rellay1"
                android:layout_marginTop="49dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvfullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:text="Full Name"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:textSize="16dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:layout_marginEnd="29dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/tvcontentfullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/sofia_pro_semibold"
                        android:text="@{account.fullName}"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/tvemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="30dp"

                    android:text="Email"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:textSize="16dp" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:layout_marginEnd="29dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/tvcontentemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/sofia_pro_medium"
                        android:text="@{account.email}"
                        android:textColor="#000000"
                        android:textSize="17dp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="30dp"
                    android:text="Phone Number"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:textSize="16dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:layout_marginEnd="29dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/tvContentPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29dp"
                        android:layout_marginTop="12dp"
                        android:text="@{account.numberPhone}"
                        android:fontFamily="@font/sofia_pro_medium"
                        android:textSize="17dp"
                        android:textColor="#000000" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</layout>