<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="812dp"
    android:background="@drawable/signup"
    tools:context=".VerificationCode">

    <ImageButton
        android:id="@+id/backLogin"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="336dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="28dp"
        android:layout_marginTop="100dp"

        android:fontFamily="@font/sofia_pro_semibold"
        android:text="Vefification Code"
        android:textColor="@color/black"
        android:textSize="36.41sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backLogin"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textView16"
        android:layout_width="371dp"
        android:layout_height="45dp"

        android:layout_marginStart="28dp"
        android:fontFamily="@font/sofia_pro_semibold"
        android:text="Please type the verification code sent to prelookstudio@gmail.com"
        android:textColor="#9796A1"

        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView15"
        tools:ignore="MissingConstraints" />

    <TableRow
        android:id="@+id/table1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView16"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/editTextNumber1"
            android:layout_width="65sp"
            android:layout_height="65sp"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_switch"
            android:ems="1"
            android:fontFamily="@font/sofia_pro_medium"
            android:inputType="number"
            android:textColor="#FE724C"
            android:textSize="27.2sp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editTextNumber2"
            android:layout_width="65sp"
            android:layout_height="65sp"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_switch"
            android:ems="1"
            android:fontFamily="@font/sofia_pro_medium"
            android:inputType="number"
            android:textColor="#FE724C"
            android:textSize="27.2sp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editTextNumber3"
            android:layout_width="65sp"
            android:layout_height="65sp"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_switch"
            android:ems="1"
            android:fontFamily="@font/sofia_pro_medium"
            android:inputType="number"
            android:textColor="#FE724C"
            android:textSize="27.2sp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editTextNumber4"
            android:layout_width="65sp"
            android:layout_height="65sp"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_switch"
            android:ems="1"
            android:fontFamily="@font/sofia_pro_medium"
            android:inputType="number"
            android:textColor="#FE724C"
            android:textSize="27.2sp"
            tools:ignore="MissingConstraints" />

    </TableRow>
   <TableRow
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/table1">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="I don't recevie a code!"
           android:textColor="#9796A1"
           android:fontFamily="@font/sofia_pro_medium"
           android:textSize="16sp"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=" Please resend"
           android:textColor="#FD8E70"
           android:fontFamily="@font/sofia_pro_medium"
           android:textSize="16sp"/>

   </TableRow>


</androidx.constraintlayout.widget.ConstraintLayout>